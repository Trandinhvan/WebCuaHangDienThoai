                        {
                            WebDT.Models.KHACHHANG kh = (WebDT.Models.KHACHHANG)@Session["TaiKhoan"];
                            <h5 class="welcome__khach">Chào @kh.TENKHACH</h5>
                        }
                        @if(Session["TaiKhoan"] != null){
                            <a class="link__dangXuat" href="@Url.Action("DangXuat","KhachHang")"><i class="fa fa-sign-out-alt"></i>Đăng xuất</a>
                        }
                        else
                        {
                            <a class="link__dangNhap-dangKy" href="@Url.Action("DangNhapDangKy","KhachHang")"><i class="fa fa-lock"></i>Đăng Nhập | Đăng Ký</a>
                        }
                    </div>
                </div>
                <div class="header_nav">
                    <nav class="navbar navbar-expand-lg container">
                        
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

