                    </nav>
                </div>

            </div>
        </header>
        <section class="carousel__banner">
            <div class="owl-carousel owl-theme">
                <div class="item">
                    <img src="../hinh/banner/720-220-720x220-2.png" />
                </div>
                <div class="item">
                    <img src="../hinh/banner/720-220-720x220-4.png" />
                </div>
                <div class="item">
                    <img src="../hinh/banner/720-220-720x220-223.png" />
                </div>
            </div>
        </section>

        


        @RenderBody()


